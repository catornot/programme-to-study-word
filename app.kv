<MainMenu>
	name: "mainmenu"

	FloatLayout:

		Widget:

			canvas.before:
            	Rectangle:
					size: self.size
					pos: self.pos                   

        RButton:
            pos_hint:{"x":0.5-0.25,"y":0.5}
            size_hint: 0.55, 0.2
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "commencer"
            on_release:
                root.manager.transition.direction = "up"
                app.root.current = "qa"

        Label:
            pos_hint:{"x":0.5-0.25,"y":0}
            size_hint: 0.55, 0.2
            text: "par Alex sadovnikov"
            color: 0,0,0,1
            valign: 'middle'
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

<RButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (48/255,84/255,150/255,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [58]

